{
  "name": "image-M8",
  "version": "0.0.1",
  "description": "Simple tool for resizing and compressing images",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "make-icon": "./node_modules/.bin/electron-icon-maker --input=logo.png --output=./project_icons",
    "build-mac": "electron-packager . image-M8 --overwrite --ignore=node_modules/electron-* && cp ./project_icons/icons/mac/icon.icns image-M8-darwin-x64/image-M8.app/Contents/Resources/electron.icns",
    "build-windows": "electron-packager . imageM8 --platform=win32  --arch=x64 --overwrite",
    "asar-package-mac": "asar pack image-M8-darwin-x64/image-M8.app/Contents/Resources/app image-M8-darwin-x64/image-M8.app/Contents/Resources/app.asar",
    "asar-package-win": "asar pack image-M8-darwin-x64/resources/app imageM8-win32-x64/resources/app.asar"
  },
  "repository": "https://github.com/nikolaDrangovski/imageM8",
  "keywords": [
    "Electron",
    "tool",
    "resize",
    "image",
    "compress",
    "easy"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "asar": "^1.0.0",
    "electron": "^4.0.7",
    "electron-connect": "^0.6.3",
    "electron-icon-maker": "0.0.4",
    "electron-installer-dmg": "^2.0.0",
    "gulp": "^4.0.0"
  },
  "dependencies": {}
}
